# Автоматически нормализовать окончания строк
* text=auto

# Python файлы всегда должны использовать LF
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf

# Django шаблоны
*.html text eol=lf
*.htm text eol=lf

# JavaScript/CSS
*.js text eol=lf
*.css text eol=lf

# Конфигурационные файлы
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.conf text eol=lf
*.ini text eol=lf
.env* text eol=lf
requirements.txt text eol=lf

# Документация
*.md text eol=lf
*.rst text eol=lf

# Не конвертировать бинарные файлы
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary 